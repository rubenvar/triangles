@font-face {
  font-family: 'Rubik'
  src: url('assets/Rubik-Variable.woff2') format('woff2-variations')
  font-weight: 100 1000
}
*
  box-sizing: border-box
body
  padding: 0
  margin: 0
  font-family: 'Rubik', cursive
main
  padding 100px
  width: 100vw
  height: 100vh
  display: grid
  justify-items center
  align-items center
  position relative
canvas
  background-color #777789
  position absolute
  top 0
  left 0
h1
  padding: 0
  margin: 0
  font-size: 140px
  color maroon
  font-weight 823
  letter-spacing: 6px
  transform translateX(100px) rotate(9deg)